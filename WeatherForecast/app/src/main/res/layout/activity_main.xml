<?xml version="1.0" encoding="utf-8"?>
<com.hendraanggrian.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/circularrevealframelayout"

    android:background="@drawable/weather_beautiful_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="32dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="32dp"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"
        app:fabSize="normal" />

    <android.support.v7.widget.CardView
        android:id="@+id/maskTo"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:foreground="?selectableItemBackground"
        android:visibility="invisible"
        app:cardBackgroundColor="?colorAccent"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp">

        <com.example.napoleonkaiser.weatherforecast.Utils.CustomView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </com.example.napoleonkaiser.weatherforecast.Utils.CustomView>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/maskSimple"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="#00000000"
        android:visibility="invisible"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>
</com.hendraanggrian.widget.RevealFrameLayout>

